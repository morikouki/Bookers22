<% if @user_or_book == "1" %>
	<% if @users.count == 0 %>
		<p>該当するUserが見つかりませんでした。</p>
	<% else %>
		<h2>User search for '<%= params[:content] %>'</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Name</th>
					<th>Introduction</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag(user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %></td>
					<td><%= user.name %></td>
					<td><%= user.introduction %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
<% else %>
	<% if @books.count == 0 %>
		<p>該当するBookが見つかりませんでした。</p>
	<% else %>
		<h2>Book search for '<%= params[:content] %>'</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag(book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
<% end %>