
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr id="favorite<%= @book.id %>">
					<%= render 'books/show', book: @book %>
				</tr>
			</table>
			<table>
				<% @book_comments.each do |book_comment| %>
					<tr>
						<td>
							<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 60, 60, fallback: "no-image-mini.jpg") %><br>
							<%= book_comment.user.name %>
						</td>
						<td><%= book_comment.comment %></td>
						<td>
							<% if book_comment.user == current_user %>
								<%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete, class:'btn btn-danger' %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</table>
			<%= form_for [@book, @comment] do |f| %>
				<%= f.text_area :comment, size:'90x5' %>
				<%= f.submit '送信' %>
			<% end %>
	</div>
</div>

